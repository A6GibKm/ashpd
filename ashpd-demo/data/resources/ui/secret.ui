<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SecretPage" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <property name="hexpand">True</property>
        <property name="spacing">12</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Retrieves a master secret</property>
            <property name="description">Calls RetrieveSecret on org.freedesktop.portal.Secret</property>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label">Request</property>
            <property name="halign">start</property>
            <property name="action-name">secret.retrieve</property>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup" id="response_group">
            <property name="title">Response</property>
            <property name="visible">False</property>
            <property name="margin-top">24</property>
            <child>
              <object class="GtkListBox">
                <property name="selection-mode">none</property>
                <property name="hexpand">True</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Token</property>
                    <child>
                      <object class="GtkLabel" id="token_label">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <style>
                  <class name="content" />
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
